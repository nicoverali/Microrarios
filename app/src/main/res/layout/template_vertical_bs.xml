<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stop_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_caption"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:text="Term. Punta Alta"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/whiteHighOpacity"
            android:layout_gravity="center_horizontal"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dot_size"
            android:layout_height="@dimen/dot_size"
            android:tint="@color/white"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_dot_secondary_color" />
    </FrameLayout>

    <TextView
        android:id="@+id/stop_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="@dimen/text_caption"
        android:textColor="@color/white"
        android:text="09:35"/>


</LinearLayout>